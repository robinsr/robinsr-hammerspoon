{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "workspace.checkThirdParty": "Disable",
  "runtime.version": "Lua 5.4",
  "diagnostics.globals": [
    "luarcjson",
    "lfs",
    "hs",
    "KittySupreme",
    "it",
    "describe"
  ],
  "diagnostics.disable": [
    "unused-local",
    "unused-function",
    "lowercase-global"
  ],
  "workspace.library": [
    "${3rd}/lfs/library",
    "${3rd}/luassert/library",
    "Spoons"
  ],
  "workspace.ignoreDir": [
    "Spoons"
  ]
}
